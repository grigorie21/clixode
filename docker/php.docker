FROM alpine:3.10

COPY config/php-fpm.conf /etc/php7/php-fpm.d/www.conf
COPY config/php.ini /etc/php7/php.ini

RUN apk update \
    && apk add --no-cache php7 php7-curl php7-fpm php7-pdo php7-pdo_mysql php7-gd php7-opcache php7-json php7-mbstring php7-fileinfo php7-tokenizer php7-dom php7-xml php7-xmlwriter php7-session composer

CMD ["php-fpm7", "-F"]


